# Google AI (Gemini) Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Optional: OpenAI API Key (for fallback transcription using Whisper)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Optional: Anthropic API Key (for other AI features)
# Get your API key from: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Voice Task Configuration
# Default language for voice transcription
VOICE_DEFAULT_LANGUAGE=en

# Maximum audio file size in MB
VOICE_MAX_FILE_SIZE=10

# Transcription confidence threshold (0-1)
VOICE_CONFIDENCE_THRESHOLD=0.8