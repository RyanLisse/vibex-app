#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run code quality checks before committing
echo "ğŸ” Running pre-commit checks..."

# Format code
echo "ğŸ“ Formatting code..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "âŒ Code formatting issues found. Running formatter..."
  npm run format
  echo "âœ… Code formatted. Please review and stage the changes."
  exit 1
fi

# Run linting
echo "ğŸ” Running linter..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ Linting errors found. Please fix them before committing."
  exit 1
fi

# Type checking
echo "ğŸ” Running type checks..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript errors found. Please fix them before committing."
  exit 1
fi

# Run unit tests
echo "ğŸ§ª Running unit tests..."
npm run test:unit
if [ $? -ne 0 ]; then
  echo "âŒ Unit tests failed. Please fix them before committing."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
